<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="3dp">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/mellat"
        android:layout_alignParentRight="true"
        android:id="@+id/img_bank"
        android:layout_margin="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بانک "
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_toLeftOf="@id/img_bank"
        android:layout_margin="3dp"
        android:id="@+id/txt_bank_name"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_update"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:id="@+id/update_gozaresh"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete"
        android:layout_toRightOf="@id/update_gozaresh"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:id="@+id/delete_gozaresh"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مبلغ : "
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/img_bank"
        android:layout_margin="3dp"
        android:id="@+id/title_mojodi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000000"
        android:textSize="14sp"
        android:layout_below="@id/img_bank"
        android:layout_toLeftOf="@id/title_mojodi"
        android:layout_margin="3dp"
        android:id="@+id/txt_money"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ریال"
        android:textSize="14sp"
        android:layout_below="@id/img_bank"
        android:layout_toLeftOf="@id/txt_money"
        android:layout_margin="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نوع تراکنش : "
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/title_mojodi"
        android:layout_margin="3dp"
        android:id="@+id/title_tarakonesh"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="واریزی"
        android:textSize="14sp"
        android:layout_below="@id/title_mojodi"
        android:layout_toLeftOf="@id/title_tarakonesh"
        android:layout_margin="3dp"
        android:id="@+id/txt_finacial"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="شماره پیگیری : "
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/title_tarakonesh"
        android:layout_margin="3dp"
        android:id="@+id/title_shomare_peigiri"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25468416546"
        android:textSize="14sp"
        android:layout_below="@id/title_tarakonesh"
        android:layout_toLeftOf="@id/title_shomare_peigiri"
        android:layout_margin="3dp"
        android:id="@+id/txt_trans_number"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_trans_number"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layoutDirection="ltr">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98/03/26"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_margin="3dp"
            android:id="@+id/txt_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:27"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_margin="3dp"
            android:id="@+id/txt_time"/>
    </LinearLayout>







</RelativeLayout>