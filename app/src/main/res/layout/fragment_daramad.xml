<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".daramad"
    android:theme="@style/tab1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="ltr">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:layout_weight="1">
                        <Spinner
                            android:id="@+id/spin_finacial_account"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:background="@drawable/shape_border_tab1"
                            android:gravity="right"
                            android:verticalScrollbarPosition="left"
                            android:spinnerMode="dropdown"
                            android:popupBackground="@color/tab1"/>
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_up2"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="حساب مالی :"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:layout_weight="1">
                        <Spinner
                            android:id="@+id/spin_bank_account"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:background="@drawable/shape_border_tab1"
                            android:gravity="right"
                            android:verticalScrollbarPosition="left"
                            android:spinnerMode="dropdown"
                            android:popupBackground="@color/tab1"/>
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_up2"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="حساب بانکی :"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_border_tab1"
                    android:layout_weight="1"
                    android:id="@+id/edt_date_daramad"
                    android:hint="1398/01/01"
                    android:textSize="@dimen/description"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:inputType="date"/>
                    <!--android:layout_gravity="right"-->

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تاریخ   :"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_tab1"
                        android:layout_weight="1"
                        android:id="@+id/edt_time_daramad"
                        android:hint="00:00"
                        android:textSize="@dimen/description"
                        android:padding="5dp"
                        android:inputType="time"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ساعت   :"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_tab1"
                        android:layout_weight="1"
                        android:id="@+id/edt_phoneNumber_daramad"
                        android:hint="09119194974"
                        android:maxLength="11"
                        android:textSize="@dimen/description"
                        android:padding="5dp"
                        android:inputType="phone"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="شماره تماس :"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_tab1"
                        android:layout_weight="1"
                        android:id="@+id/edt_money_daramad"
                        android:hint="money"
                        android:textSize="@dimen/description"
                        android:padding="5dp"
                        android:inputType="number"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="مبلغ :"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_tab1"
                        android:layout_weight="1"
                        android:id="@+id/edt_trans_number_daramad"
                        android:hint="following number"
                        android:padding="5dp"
                        android:textSize="@dimen/description"
                        android:inputType="number"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="شماره پیگیری :"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_tab1"
                        android:layout_weight="1"
                        android:id="@+id/edt_reference_daramad"
                        android:hint="reference number"
                        android:padding="5dp"
                        android:textSize="@dimen/description"
                        android:inputType="number"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="شماره ارجاع :"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:layout_weight="1">
                        <Spinner
                            android:id="@+id/spin_trans_result"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:background="@drawable/shape_border_tab1"
                            android:gravity="right"
                            android:verticalScrollbarPosition="left"
                            android:spinnerMode="dropdown"
                            android:popupBackground="@color/tab1"/>
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_up2"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="نتیجه تراکنش :"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_tab1"
                        android:layout_weight="1"
                        android:id="@+id/edt_detail_daramad"
                        android:hint="comment"
                        android:textSize="@dimen/description"
                        android:padding="5dp"
                        android:inputType="textMultiLine"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="توضیحات :"
                        android:layout_weight="1"
                        android:scrollbarSize="@dimen/description"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>
                </LinearLayout>




                <Button
                    android:id="@+id/btn_save_daramad"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/title"
                    android:background="@drawable/shape_border_tab1"
                    android:text="ثبت درآمد ها"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>