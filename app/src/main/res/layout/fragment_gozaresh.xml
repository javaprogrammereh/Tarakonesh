<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gozaresh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="ltr"
        android:id="@+id/lnr_header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_borderbottom_main_activity"
            android:orientation="horizontal"
            android:padding="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expense"
                android:orientation="vertical"
                android:layoutDirection="rtl"
                android:textAlignment="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_expense"
                    android:text="@string/hazineha"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_expense"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/price_hazineh"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/title"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_expense"
                    android:layout_toLeftOf="@id/price_hazineh"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/description"
                    android:text="@string/rial"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prelude"
                android:orientation="vertical"
                android:layoutDirection="rtl"
                android:textAlignment="center"
                android:background="@drawable/shape_borderleft_main_activity"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_prelude"
                    android:text="@string/darAmadi"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_prelude"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/price_daramad"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/title"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_prelude"
                    android:layout_toLeftOf="@id/price_daramad"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/description"
                    android:text="@string/rial"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layoutDirection="rtl"
            android:background="@drawable/shape_borderbottom_main_activity">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:textAlignment="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/whole"
                    android:text="@string/majmokol"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:textAlignment="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_all"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:text=""
                    android:textSize="@dimen/title"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/price_all"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/description"
                    android:text="@string/rial"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layoutDirection="rtl">
        <Button
            android:id="@+id/btn_daramad"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape_border_login"
            android:text="لیست درآمدی"
            android:textColor="@color/purpleDark"/>
        <Button
            android:id="@+id/btn_hazineh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/shape_border_login"
            android:text="هزینه"
            android:textColor="@color/purpleDark"/>
    </LinearLayout>
    <ListView
        android:id="@+id/list_view_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
